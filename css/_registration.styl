.modal-overlay
    position fixed
    width 100%
    height 100%
    visibility hidden
    top 0
    left 0
    z-index 1000
    opacity 0
    background rgba(28,155,230,0.7);
    transition all 0.3s

.modal
    position fixed
    top 50%
    left 50%
    width 50%
    max-width 630px
    min-width 320px
    height auto
    z-index 2000
    visibility hidden
    backface-visibility hidden
    transform translateX(-50%) translateY(-50%)
    overflow hidden

    .modal-content
        position relative
        text-align center
        padding 30px 25px

        width 100%

        border-radius 2px

        transform scale(0.7)
        opacity 0
        transition all 0.3s

        .register-step-1
            position absolute
            display block
            width 100%
            transition right 1s
        .register-step-2
            position absolute
            display block
            width 100%
            transition left 1s

            .text
                display block
                width 70%
                margin auto   
                margin-bottom 30px 
                font-size 17px

            a.button
                width 50%
                margin auto
                margin-top 20px

        &.step-1
            height 450px
            .register-step-1
                right 0
            .register-step-2
                left 110%
        &.step-2
            height 280px
            .register-step-1
                right 110%
            .register-step-2
                left 0 

        &.no-credit-card
            height 380px !important
            .register-form
                .input-container.credit-card
                    display none
                .charge-text
                    display none
                    
        &.show-discount
            height 500px

        &.slide-left
            right 100%

        .modal-title
            display block
            font-size 2rem
            margin-bottom 25px

        .show-discount
            display block
            position absolute
            right 0
            bottom 0
            margin -35px 15px
            cursor pointer

        .close-modal
            display block
            position absolute
            top 0
            left 0
            margin -1px 17px
            cursor pointer
            font-size 50px
            &:hover, &:active
                color darken(white, 45%)

        .register-form        

            .charge-text
                margin 20px auto

            .button-container
                width 100%
                display block
                margin-top 20px
                text-align center
                a.button
                    width: 200px
                    &.success
                        background-color: lighten(green, 15%)
                    &.fail
                        background-color: lighten(red, 25%)
                    &.has-icon
                        font-size 20px
                        pointer-events none
                        cursor default
                        i
                            display inline-block
                            width 25px
                            height 25px

            .input-error-text
                display none
                marign auto
                margin-top -5px
                margin-bottom 5px
                font-size 14px
                text-align center
                color lighten(red, 30%)
                &.show
                    display block
                &.green
                    color lighten(green, 15%)
                    font-size 16px

            .input-container
                display block
                margin 10px auto
                border-radius 2px

                text-align center
                background: lighten(colors.slate, 20%)
                width 50%

                box-sizing border-box;

                padding 0px 35px

                input
                    width 90%
                    height 35px
                    font-size 15px

                    background: lighten(colors.slate, 20%)
                    color white
                    border none
                    padding 2px
                    outline none

                i
                    display inline-block
                    width 25px
                    font-size 24px
                    padding-top 6px
                    line-height 25px
                    &.left
                        float left
                        padding-left 5px
                        margin-left -32px
                    &.right
                        float right
                        padding-right 5px
                        margin-right -32px

                        opacity 0
                        transition opacity 0.5s
                    &.input-check
                        color lighten(green, 30%)
                        opacity 1
                    &.input-error
                        color lighten(red, 30%)
                        opacity 0
                    &.card
                        width 32px
                        height 17px
                        background-size contain
                        background-repeat no-repeat
                        margin-top 7px
                        margin-right -28px
                        &.visa
                            background-image url('/img/cards/visa.png')
                            opacity 1
                        &.mastercard
                            background-image url('/img/cards/mastercard.png')
                            opacity 1
                        &.jcb
                            background-image url('/img/cards/jcb.png')
                            opacity 1
                        &.dinersclub
                            background-image url('/img/cards/diners.png')
                            opacity 1
                        &.amex
                            background-image url('/img/cards/amex.png')
                            opacity 1
                        &.pe-7s-check
                            margin-top 0
                            margin-right -32px

                &.error
                    i.input-error
                        opacity 1
                    i.input-check
                        opacity 0

                &.empty
                    i.input-check
                        display none

                &.hidden
                    display none

                &.credit-card
                    padding 0

                    .input-container
                        width 100%
                        margin 0px
                        border-bottom: 1px solid lighten(colors.slate, 10%)
                        border-radius 0px

                    .input-container.half
                        width 49.8%
                        display inline-block
                        margin 0px
                        border-bottom 0px
                        padding-left 40px

                        input
                            width 90%

                        i.left
                            padding-left 3px
                            margin-left -35px
                        i.right
                            padding-right 3px
                            margin-right -32px

                        &:last-child
                            border-left: 1px solid lighten(colors.slate, 10%)

    &.show
        visibility visible

        & ~ .modal-overlay
            opacity 1
            visibility visible

        .modal-content
            transform scale(1)
            opacity 1