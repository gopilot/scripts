// set up the grid
numcols = 12
for cols in (1..numcols)
    .push-{cols}
        left (cols/numcols) * 100%
    .pull-{cols}
        right (cols/numcols) * 100%
    .span-{cols}
        position relative
        width (cols/numcols) * 100%
        .align-corners > & + [class*="span-"]
            margin-left (cols/numcols) * 100%

.align-top
    vertical-align top

// TODO create separate settings file
// control as much of appearance as is reasonable through the config settings
// to allow for customization per-event without having to dig into the actual css
colors = {
    blue: #1C9BE6
    slate: #212223
}


base-font-size = 16px
sizes = {
    small: .76rem
    base: 1rem
    medium: 1.2rem
    large: 1.5rem
    larger: 1.8rem
}
for size in sizes
    .typ-{size}
        font-size: sizes[size]

global-reset()

html 
    font-size base-font-size

body
    padding-top 20px
    font-family 'DIN'
    font-weight: 200
    line-height 1.3
    -webkit-font-smoothing: antialiased

html, body
    width 100%
    height 100%

p
    margin 1rem 0

img
    display inline-block
    width 100%

em
    font-weight 400

a
    text-decoration none
    color inherit

h4
    font-size: sizes.large
    text-transform uppercase

h5
    font-weight: 400
    margin-top: 1rem
    margin-bottom: 0
    font-size: sizes.large

h6
    text-transform uppercase
    font-size: sizes.base
    font-weight: 400

hr
    width 100px
    background: rgba(colors.slate, .1)
    height 1px
    border: 0px 
    outline: 0px
    text-align: left
    margin 1rem 0px

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button 
    display none
    -webkit-appearance none
    margin 0

.typ-right
    text-align right

.background
    position fixed
    top 0 
    left 0
    right 0
    bottom 0
    background url('img/girls.jpg') center center no-repeat
    -webkit-filter: contrast(140%)
    background-size cover
    z-index -1

    &::before, &::after
        content ""
        absolute top 0 left 0
        bottom 0
        right 0
        z-index 10

    &::before
        background: rgba(colors.slate, .7)

    &::after
        background: rgba(colors.blue, .4)
        z-index 9

// buttons are pills by default
.button
    text-transform: uppercase
    background: rgba(black, .2)
    color: white
    padding 8px 18px
    display: inline-block
    cursor: pointer
    transition: background .2s

    &:hover
        background: rgba(black, .5)

    &.large
        padding .75rem 1.68rem
        font-size: sizes.large
        border-radius: 28px
    
    &.disabled
        pointer-events: none
        cursor: default
        opacity: 0.4

    &.block
        display block



.action_link
    text-transform uppercase
    border-bottom 1px solid rgba(white, .3)
    margin 0px 25px
    &:hover
        border-bottom-color white
    

.section
    clear both
    max-width 1280px
    margin 3.125rem 0 6.25rem 0
    margin-right 3.125rem

    &.space-above
        margin-top 9rem


.row
    [class*="span-"]
        display inline-block

.list
    font-size: sizes.larger

    .row
        .box
            padding: 10px 20px


.box
    padding 1.25rem
    // background colors
    box-sizing border-box
    color white

    &.title
        text-align right

    &.left
        padding-left 2.8125rem 

    &.blue
        background: rgba(colors.blue, .9)
        color: white

    &.slate
        background: colors.slate
        color: white
        a
            color: lighten(colors.blue, 30%)
            border-bottom: 1px solid rgba(colors.blue, .2)
            &:hover
                border-bottom-color: colors.blue
        .button
            border: none
            background: rgba(colors.blue, 1.0)
            color: white
            &:hover
                background: rgba(colors.blue, 0.7)

    &.white
        background: white
        color: colors.slate
        a
            color: colors.blue
            border-bottom: 1px solid rgba(colors.blue, .2)

    &.copy
        padding-left 2.5rem
        padding-right 2.5rem


.info-list
    padding-left 2.5rem
    margin-bottom -1.875rem
    margin-top -2.5rem
    padding-top 1.875rem
    color white
    box-sizing border-box
    li
        display inline-block
        width auto
        margin-right 50px
        margin-bottom 1.875rem

        p
            margin 0
            @extend .typ-larger

.pilot-logo
    background: url('img/arc_white.svg') center center no-repeat
    background-size: contain
    display block
    width: 140px
    height: 96px
    text-indent: -400px
    margin-top 20px

.header nav
    padding-top 0
    a
        display inline-block
        vertical-align top
        font-size: sizes.medium
        text-transform: uppercase
        border-right: 1px solid rgba(colors.blue, .4)
        padding-top: p = 1.5em
        padding-left 1em
        padding-right 1em
        transition background .3s, padding .3s

        &:hover
            background: rgba(colors.blue, .3)
            padding-bottom: (p / 2.1)
            padding-top: (p / 1.9)

        &:active
            background: rgba(colors.blue, .9)
            padding-bottom: (p / 2.1)
            padding-top: (p / 1.9)
            transition background .1s

        &:last-child
            border-right none


/* Section specific styles/map sections to types above */

.faq
    h5 + p
        margin-top .5rem

.schedule
    @extends .list
    .schedule-day
        margin-left: 5%;

.header
    a.button
        margin 10px 10px

.sponsors
    .sponsors-row
        margin-bottom 1%
        &:last-child
            margin-bottom 0
        >div
            box-sizing border-box
            padding 3%
            display inline-block
            text-align center
            a
                border-bottom none
            img
                width 90%
                height auto
                
.projects
    .box.white
        padding 25px
    .project-list
        .no-projects
            font-size: 30px;
            width: 100%;
            text-align: center;
        .label
            display inline-block
            padding 15px 25px
            text-transform uppercase
            background white
            width auto
            overflow hidden
            font-size 22px
        .project-background
            margin-top -5px
            height 200px
            background-color #333
            background-size cover
            background-position center
            background-position-y 60% // Kind of a magic number based on most photos
            display inline-block
            cursor pointer
            position relative
            padding: 15px
            box-sizing border-box
            .star
                position absolute
                top 15px
                right 15px
                color #FFDF00
                font-size 35px
                z-index 10
            .background-darken
                position absolute
                width 100%
                height 100%
                top 0
                left 0
                background #222
                opacity 0
                transition opacity 0.4s
                z-index 1

            &:hover
                .background-darken
                    opacity 0.9
                
            .project-labels
                position relative
                display table-cell
                vertical-align middle
                z-index 10
                .project-name
                    font-size 30px
                    color white
                    margin-bottom 10px
                .project-authors
                    font-size 16px
                    text-transform uppercase
                    color #CCC
                    
    .modal.view-project
        overflow hidden
        padding 0
        padding-top 60px
        max-height none
        background white
        .close-container
            position fixed
            width 100%
            top 0
            left 0
            right 0
            height 60px
            .close-button
                float right
                font-size 60px
                padding-right 20px
                cursor pointer
                &:hover
                    color: colors.blue
            .star
                float left
                font-size 20px
                padding-left 20px
                padding-top 20px
                .pe-7f-star
                    line-height 20px
                    padding-right 10px
                    font-size 40px
                    color #FFDF00
                span
                    vertical-align top
        .project-container
            overflow-y scroll
            overflow-x hidden
            max-height: 80vh;
        .project-image
            position relative
            box-sizing content-box
            width 100%
            height 200px
            margin 0 -25px 25px
            padding 0 12.5px
            background-size cover
            background-position center
            .project-title
                box-sizing border-box
                position absolute
                width 100%
                text-align center
                height 60px
                font-size 60px
                top 50%
                margin-top -30px
                margin-left 0px
                text-shadow: 0 1px 0 #333;
                color white
                &.long
                    font-size 40px
        .project-description
            margin 40px
            h1
                font-size 1.5em
                font-weight bold
                text-align center

/* Animations */
.spin 
    -webkit-animation spin 1s linear infinite
    -moz-animation spin 1s linear infinite
    -o-animation spin 1s linear infinite
    animation spin 1s linear infinite
    -webkit-transform-origin: 50% 58%
    transform-origin 50% 58%
    -ms-transform-origin 50% 58% /* IE 9 */


@-moz-keyframes spin {
  from {
    -moz-transform: rotate(0deg);
  }
  to {
    -moz-transform: rotate(360deg);
  }
}

@-webkit-keyframes spin {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


